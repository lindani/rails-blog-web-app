<h1>Listing Articles</h1>
<%= link_to 'New article', new_article_path if authenticated? %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.rich_text_content %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <% if authenticated? %>
        <td><%= link_to "Edit", edit_article_path(article) %></td>
        <td><%= button_to "Destroy", article_path(article), method: :delete, data: { turbo_confirm: "Are you sure?" } %></td>
      <% end %>
    </tr>
  <% end %>
</table>