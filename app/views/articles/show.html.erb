<% cache @article do %>
  <p>
    <strong>Title:</strong>
    <%= @article.title %>
  </p>

  <p>
    <strong>Text:</strong>
    <%= @article.rich_text_content %>
  </p>
  <%= image_tag @article.featured_image if @article.featured_image.attached? %>

  <% if authenticated? %>
    <%= link_to 'Edit', edit_article_path(@article) %>
  <% end %>

  <%= link_to 'Back', articles_path %>
<% end %>